# Database Configuration
MONGODB_URI=mongodb://localhost:27017/airtable-form-builder

# Airtable OAuth Configuration
AIRTABLE_CLIENT_ID=your_airtable_client_id_here
AIRTABLE_CLIENT_SECRET=your_airtable_client_secret_here
AIRTABLE_REDIRECT_URI=http://localhost:3001/auth/callback

# Airtable Personal Access Token (Alternative to OAuth)
AIRTABLE_PERSONAL_ACCESS_TOKEN=your_personal_access_token_here
AIRTABLE_BASE_ID=your_airtable_base_id_here

# Session Configuration
SESSION_SECRET=your_secret_session_key_here

# Server Configuration
PORT=3001
NODE_ENV=development

# Webhook Configuration
WEBHOOK_SECRET=your_webhook_secret_here
WEBHOOK_URL=http://localhost:3001/webhooks/airtable

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173
